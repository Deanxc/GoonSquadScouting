<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllianceSelectionActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/secondPickView"
        android:layout_width="200dp"
        android:layout_height="475dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPickView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/firstPickView"
        android:layout_width="200dp"
        android:layout_height="475dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/eventTeamList"
        android:layout_width="385dp"
        android:layout_height="946dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/secondPickView"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>