<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/to_client"
        android:layout_width="355dp"
        android:layout_height="103dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="123dp"
        android:onClick="toClient"
        android:text="Client"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/to_server"
        android:layout_width="359dp"
        android:layout_height="101dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="123dp"
        android:onClick="toServer"
        android:text="Server"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_client" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="551dp"
        android:layout_height="342dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="255dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deep_space_logo" />

</android.support.constraint.ConstraintLayout>